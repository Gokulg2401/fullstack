pipeline {
    agent any

    environment {
        PORT = '8080'
        REACT_APP_API_URL = "http://localhost:${PORT}/api"
    }

    stages {
        stage('Checkout') {
            steps {
                // Use the correct credentials to fetch the repo
                git branch: 'main', credentialsId: '28b28bd1-7fe5-4556-bf9a-484cfc6d1e05', url: 'https://github.com/Gokulg2401/Reactproject.git'
            }
        }
        stage('Build Frontend') {
            steps {
                dir('src/comp') {
                    sh '''
                    npm install
                    npm run build
                    '''
                }
            }
        }
        stage('Build Backend and Copy Frontend') {
            steps {
                // Copy the React build to Spring Boot static folder
                sh 'cp -r src/comp/build/* demo/src/main/resources/static/'
                dir('demo') {
                    sh './mvnw clean package'
                }
            }
        }
        stage('Deploy') {
            steps {
                sh '''
                pkill -f "java -jar" || true
                JAR_NAME=$(ls demo/target/*.jar | head -n 1)
                nohup java -jar "$JAR_NAME" > app.log 2>&1 &
                '''
            }
        }
    }
    post {
        success {
            echo 'Build and deployment succeeded!'
            echo "Your app should be available at: http://<your-aws-public-ip>:8080"
        }
        failure {
            echo 'Build or deployment failed. Check logs above for details.'
        }
    }
}

